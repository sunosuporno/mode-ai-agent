/**
 * @param type - "evm" or "solana", extend this union as needed (e.g., "sui")
 * @param id - Chain ID, optional for EVM
 */
type Chain = EvmChain | SolanaChain | AptosChain | ChromiaChain;
type EvmChain = {
    type: "evm";
    id: number;
};
type SolanaChain = {
    type: "solana";
};
type AptosChain = {
    type: "aptos";
};
type ChromiaChain = {
    type: "chromia";
};

export type { AptosChain, Chain, ChromiaChain, EvmChain, SolanaChain };
